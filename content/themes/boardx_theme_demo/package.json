{
  "name": "boardx_theme_demo",
  "version": "1.0.0",
  "description": "A modern Ghost theme with Tailwind CSS",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "scripts": {
    "dev": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/screen.css --watch",
    "build": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/screen.css --minify",
    "test": "gscan .",
    "zip": "zip -r theme.zip ./* -x '*.development.css' '*.map' '*.DS_Store' '*.git*' '*.github*' '/node_modules/*' '*.zip' 'package-lock.json' '/src/*'"
  },
  "keywords": [
    "ghost-theme",
    "ghost",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.14",
    "gscan": "^4.36.1",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2"
  },
  "config": {
    "posts_per_page": 12,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
