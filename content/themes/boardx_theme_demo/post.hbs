{{!< default}}

{{#post}}
<article class="max-w-4xl mx-auto">
    <header class="mb-16 text-center">
        <div class="mb-6">
            {{#primary_tag}}
            <a href="{{url}}" class="inline-flex items-center px-3 py-1 text-sm border border-gray-200 rounded-full text-gray-600 hover:border-gray-900 hover:text-gray-900 transition-colors">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                {{name}}
            </a>
            {{/primary_tag}}
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">{{title}}</h1>
        
        <div class="flex items-center justify-center space-x-4 text-gray-600 text-sm">
            {{#primary_author}}
            <div class="flex items-center">
                {{#if profile_image}}
                <img class="w-10 h-10 rounded-full mr-3" src="{{profile_image}}" alt="{{name}}">
                {{/if}}
                <div class="text-left">
                    <span class="block font-medium text-gray-900">{{name}}</span>
                    {{#if bio}}
                    <span class="text-xs">{{bio}}</span>
                    {{/if}}
                </div>
            </div>
            {{/primary_author}}
            
            <span class="w-1 h-1 bg-gray-300 rounded-full"></span>
            
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
            </div>
            
            <span class="w-1 h-1 bg-gray-300 rounded-full"></span>
            
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>{{reading_time minute="1 min" minutes="% mins"}}</span>
            </div>
        </div>
    </header>

    {{#if feature_image}}
    <figure class="mb-16 aspect-w-16 aspect-h-9 rounded-xl overflow-hidden">
        <img class="w-full h-full object-cover" src="{{feature_image}}" alt="{{title}}">
        {{#if feature_image_caption}}
        <figcaption class="text-center text-sm text-gray-500 mt-2">{{feature_image_caption}}</figcaption>
        {{/if}}
    </figure>
    {{/if}}

    <div class="prose prose-lg max-w-none mb-16">
        {{content}}
    </div>

    {{#if tags}}
    <div class="border-t border-gray-100 pt-8">
        <div class="flex flex-wrap gap-2">
            {{#foreach tags}}
            <a href="{{url}}" class="inline-flex items-center px-3 py-1 text-sm border border-gray-200 rounded-full text-gray-600 hover:border-gray-900 hover:text-gray-900 transition-colors">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                {{name}}
            </a>
            {{/foreach}}
        </div>
    </div>
    {{/if}}

    <div class="border-t border-gray-100 mt-16 pt-16">
        <div class="flex flex-col items-center">
            <h3 class="text-lg font-semibold mb-4">Share this article</h3>
            <div class="flex space-x-4">
                <a href="https://twitter.com/share?url={{url absolute="true"}}&text={{title}}" class="p-2 text-gray-600 hover:text-gray-900 transition-colors" target="_blank" rel="noopener">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                </a>
                <a href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{title}}" class="p-2 text-gray-600 hover:text-gray-900 transition-colors" target="_blank" rel="noopener">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                </a>
                <a href="mailto:?subject={{title}}&body={{url absolute="true"}}" class="p-2 text-gray-600 hover:text-gray-900 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</article>

{{#if @site.members_enabled}}
<aside class="max-w-2xl mx-auto mt-16 pt-16 border-t border-gray-100">
    <div class="bg-gray-50 rounded-2xl p-8 text-center">
        <h3 class="text-2xl font-bold mb-4">Subscribe to {{@site.title}}</h3>
        <p class="text-gray-600 mb-6">Get the latest posts delivered right to your inbox.</p>
        <form class="flex max-w-md mx-auto">
            <input type="email" placeholder="Enter your email" class="flex-1 px-4 py-3 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent">
            <button type="submit" class="px-6 py-3 bg-black text-white rounded-r-lg hover:bg-gray-800 transition-colors">
                Subscribe
            </button>
        </form>
    </div>
</aside>
{{/if}}
{{/post}}
